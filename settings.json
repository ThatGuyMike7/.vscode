{
    // Core settings
    "update.enableWindowsBackgroundUpdates": true,
    "update.mode": "manual",
    "git.ignoreMissingGitWarning": true,
    "git.enabled": false,
    "workbench.list.openMode": "doubleClick",

    // Theming
    //"workbench.colorTheme": "GitHub Dark",
    //"workbench.colorTheme": "Eva Dark Bold",
    //"workbench.colorTheme": "Night Owl (No Italics)",
    //"workbench.colorTheme": "Darcula",
    "workbench.colorTheme": "Default Dark+",

    //"workbench.iconTheme": "field-lights-monochrome",
    //"workbench.iconTheme": "material-icon-theme",
    "workbench.iconTheme": "vscode-icons",

    // Appearance
    "editor.semanticHighlighting.enabled": true,

    "window.titleBarStyle": "custom",
    "breadcrumbs.enabled": false,
    "window.title": "${rootName}",
    "window.restoreFullscreen": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.tabSizing": "shrink",

    "editor.fontFamily": "Cascadia Code",
    //"editor.fontFamily": "IBM Plex Mono",
    //"editor.fontFamily": "Iosevka SS03",
    //"editor.fontFamily": "Hack",
    //"editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,

    "editor.cursorStyle": "line",
    "editor.cursorSmoothCaretAnimation": false,
    "editor.cursorBlinking": "smooth",

    "editor.overviewRulerBorder": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.minimap.enabled": false,

    "editor.renderWhitespace": "none",
    "editor.renderLineHighlight": "none",
    "editor.guides.indentation": true,
    "editor.matchBrackets": "near",
    "editor.selectionHighlight": true,
    "editor.occurrencesHighlight": false,

    //"editor.rulers": [100],
    "explorer.compactFolders": false,
    "editor.roundedSelection": true,
    "editor.glyphMargin": true,
    "scm.diffDecorations": "none",

    "debug.openDebug": "neverOpen",

    // Behavior
    "task.saveBeforeRun": "always",
    "files.autoSave": "off",
    "files.saveConflictResolution": "askUser",

    "editor.suggest.insertMode": "insert",
    "editor.suggestOnTriggerCharacters": true,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },

    "files.trimTrailingWhitespace": true,
    "editor.trimAutoWhitespace": false,

    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.autoIndent": "full",
    "editor.detectIndentation": false,

    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,

    "workbench.editor.revealIfOpen": true,
    "search.quickOpen.includeHistory": false,
    "search.quickOpen.history.filterSortOrder": "default",
    "search.sortOrder": "fileNames",

    "workbench.editor.enablePreview": false,
    "workbench.editor.openPositioning": "last",
    "editor.wordWrap": "off",
    "editor.folding": false,
    "editor.links": false,
    "editor.dragAndDrop": false,
    "editor.mouseWheelZoom": false,

    "editor.smoothScrolling": false,
    "workbench.list.smoothScrolling": false,

    "zenMode.fullScreen": false,
    "zenMode.restore": true,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideTabs": false,
    "zenMode.hideActivityBar": true,
    "zenMode.hideStatusBar": false,
    "zenMode.silentNotifications": true,

    "explorer.autoReveal": false,

    ///////////////////////////////////////////////////////
    //                    Extensions                     //
    ///////////////////////////////////////////////////////

    // C/C++
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.intelliSenseMode": "msvc-x64",
    "C_Cpp.intelliSenseEngine": "Default",
    "C_Cpp.intelliSenseEngineFallback": "Enabled",
    "C_Cpp.intelliSenseUpdateDelay": 500,
    "C_Cpp.errorSquiggles": "Enabled",
    "C_Cpp.enhancedColorization": "Enabled",
    "C_Cpp.formatting": "Disabled",

    // C#
    "csharp.referencesCodeLens.enabled": false,
    "csharp.format.enable": true,

    // JSON
    "json.format.enable": false,

    // TeX / LaTeX
    "[tex]": {
        "editor.formatOnPaste": false,
        "editor.formatOnType": false,
        "editor.formatOnSave": false
    },
    "[latex]": {
        "editor.formatOnPaste": false,
        "editor.formatOnType": false,
        "editor.formatOnSave": false
    },

    // Project Manager
    "projectManager.vscode.baseFolders": ["E:/Projects", "E:/Projekte"],
    "projectManager.git.baseFolders": ["E:/Dieser PC/Dokumente/GitHub"],

    "powershell.integratedConsole.showOnStartup": false,
    "powershell.integratedConsole.suppressStartupBanner": true,
    "powershell.sideBar.CommandExplorerVisibility": false,
    "task.problemMatchers.neverPrompt": {
        "shell": true
    },

    // Material Icon Theme
    "material-icon-theme.opacity": 0.75,
    "material-icon-theme.hidesExplorerArrows": true,
    "material-icon-theme.folders.associations": {
        "intermediate": "dump"
    },

    // LaTeX Workshop
    "latex-workshop.view.pdf.viewer": "tab",

    // Appended by VSCode
    "extensions.ignoreRecommendations": true,
    "security.workspace.trust.enabled": false,
    "window.zoomLevel": 1,
    "window.menuBarVisibility": "compact",
}