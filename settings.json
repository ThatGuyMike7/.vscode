{
    // Core settings
    "git.ignoreMissingGitWarning": true,
    "git.enabled": false,
    "workbench.list.openMode": "doubleClick",
    "window.zoomLevel": 1,

    // Appearance
    "workbench.colorTheme": "Field Lights",
    "workbench.iconTheme": "field-lights",
    //"workbench.iconTheme": "material-icon-theme",
    "editor.semanticHighlighting.enabled": false,

    "window.menuBarVisibility": "compact",
    "breadcrumbs.enabled": false,
    "window.title": "${rootName}",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.tabSizing": "shrink",

    //"editor.fontFamily": "JetBrains Mono",
    "editor.fontFamily": "Fira Code",
    //"editor.fontFamily": "Victor Mono",
    "editor.fontSize": 13,
    "editor.fontLigatures": true,

    "editor.cursorStyle": "block",
    "editor.cursorSmoothCaretAnimation": false,
    "editor.cursorBlinking": "smooth",

    "editor.overviewRulerBorder": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.minimap.enabled": false,

    "editor.renderWhitespace": "none",
    "editor.renderLineHighlight": "none",
    "editor.renderIndentGuides": false,
    "editor.matchBrackets": "near",
    "editor.selectionHighlight": true,
    "editor.occurrencesHighlight": false,

    "editor.rulers": [100, 120],
    "explorer.compactFolders": false,
    "editor.roundedSelection": true,
    "editor.glyphMargin": true,
    "scm.diffDecorations": "none",

    // Behavior
    "task.saveBeforeRun": "always",
    "files.autoSave": "onFocusChange",
    "files.saveConflictResolution": "askUser",

    "editor.suggest.insertMode": "insert",
    "editor.suggestOnTriggerCharacters": false,
    "editor.quickSuggestions": {
        "other": false,
        "comments": false,
        "strings": false
    },

    "files.trimTrailingWhitespace": true,
    "editor.trimAutoWhitespace": false,

    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.autoIndent": "full",
    "editor.detectIndentation": false,

    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "editor.formatOnType": false,

    "workbench.editor.revealIfOpen": true,
    "search.quickOpen.includeHistory": false,
    "search.quickOpen.history.filterSortOrder": "default",
    "search.sortOrder": "fileNames",

    "workbench.editor.enablePreview": false,
    "workbench.editor.openPositioning": "first",
    "editor.wordWrap": "off",
    "editor.folding": false,
    "editor.links": false,
    "editor.dragAndDrop": false,
    "editor.mouseWheelZoom": false,

    "editor.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,

    ///////////////////////////////////////////////////////
    //                    Extensions                     //
    ///////////////////////////////////////////////////////

    // C/C++
    "C_Cpp.updateChannel": "Insiders",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.intelliSenseMode": "msvc-x64",
    "C_Cpp.intelliSenseEngine": "Default",
    "C_Cpp.intelliSenseEngineFallback": "Enabled",
    "C_Cpp.errorSquiggles": "Enabled",
    "C_Cpp.enhancedColorization": "Enabled",

    // Project Manager
    "projectManager.vscode.baseFolders": ["E:/Projects", "E:/Projekte"],
    "projectManager.git.baseFolders": ["E:/Dieser PC/Dokumente/GitHub"],

    "powershell.integratedConsole.showOnStartup": false,
    "powershell.integratedConsole.suppressStartupBanner": true,
    "powershell.sideBar.CommandExplorerVisibility": false,
    "task.problemMatchers.neverPrompt": {
        "shell": true
    },

    // Material Icon Theme
    "material-icon-theme.opacity": 0.75,
    "material-icon-theme.hidesExplorerArrows": true,
    "material-icon-theme.folders.associations": {
        "intermediate": "dump"
    },

    // LaTeX Workshop
    "latex-workshop.view.pdf.viewer": "tab",

    // CMake Tools
    //"cmake.autoRestartBuild": true,
    //"cmake.configureOnOpen": true,
}